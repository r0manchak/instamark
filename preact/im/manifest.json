{
    "name": "Instamark",
    "description": "Browser Bookmarks rethought.",
    "version": "0.0.0",
    "manifest_version": 2,
    "author": "Andrii Romanchak",
    "permissions": [
        "bookmarks",
        "tabs"
    ],
    "background": {
        "scripts": ["js/background.js"],
        "persistent": true
    },
    "browser_action": {
        "default_title": "Instamark",
        "default_popup": "popup.html"
    },
    "commands": {
        "_execute_browser_action": {
            "description": "Create a bookmark",
            "suggested_key": {
                "default": "Ctrl+D",
                "mac": "MacCtrl+D"
            }
        }
    }
}
